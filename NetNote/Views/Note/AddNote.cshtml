@model NetNote.Models.Note.NoteModel

@{
    ViewData["Title"] = "AddNote";
}

<h2>AddNote</h2>

<h4>NoteModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNote" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoteTypeID" class="control-label"></label>
                <select asp-for="NoteTypeID" asp-items="@ViewBag.Types" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Attachment" class="control-label"></label>
                <input asp-for="Attachment" type="file" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="AddNote" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
